@model RatingSystem.ViewModels.HomeViewModel

<style>
    .employeeimages {
        height: 150px;
        width: 150px;
        border-radius: 50%;
        margin-top: -50px;
    }

    #team .card {
        border-radius: 0;
        box-shadow: 5px 5px 15px #0094ff;
        transition: all 0.3s ease-in;
        -webkit-transition: all 0.3s ease-in;
        -moz-transition: all 0.3s ease-in;
    }

        #team .card:hover {
            background: #0094ff;
            color: white;
            border-radius: 5px;
            border: none;
            box-shadow: 5px 5px 10px #9E9E9E;
        }

   
    #line{
        margin-left: 250px;
    }

    #mycontainer {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>
<div class="row mb-5" id="line">
        <h1>Who did you see today?</h1>
</div>
<div id="mycontainer" class="">
    <section id="team">

        <div class="container text-center">


            <div class="row" id="mover">
                @foreach (var item in Model.Employees)
                {
                    <div style="padding-bottom:50px;" class="col-lg-3 col-md-6">
                        <div style="cursor:pointer;" onclick="window.location.href='@Url.Action("Rating", "Home", new {ID=item.ID })'" class="card">
                            <div class="card-body">
                                <img src="@item.Image" alt="" class="employeeimages img-fluid" />
                                <h3>@item.Name</h3>
                                <p>@item.Designation</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</div>


