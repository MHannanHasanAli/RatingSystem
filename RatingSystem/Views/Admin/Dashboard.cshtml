@model RatingSystem.ViewModels.AdminViewModel
@{
    ViewBag.Title = "Dashboard";
}

<style>
    .table th, .table td {
        padding: 0.5rem 0.9375rem;
        vertical-align: top;
        border-top: 1px solid #f3f3f3;
    }

    .rating-box {
        padding: 25px 37px;
        border-radius: 25px;
        text-align: center;
    }

        .rating-box h3 {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .rating-box .stars {
            display: flex;
            align-items: center;
            gap: 5px;
            width: 0px;
        }

    .stars i {
        font-size: 20px;
        color: #b5b8b1;
        transition: all 0.2s;
        cursor: pointer;
    }

        .stars i.active {
            color: #ffb851;
            transform: scale(1.2);
        }
</style>
<h2>Dashboard - Welcome @Model.SignedInUser.Name</h2>


